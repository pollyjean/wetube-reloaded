mixin video(video)
  a.home__videoItem(href=`/videos/${video.id}`)
    article
      div.home__videoThumb
      h4.home__videoTitle=video.title
      div.home__videoHashtags
        each hashtag in video.hashtags
          i=hashtag + " "
      div.home__videoMeta
        small.home__videoOwner #{video.owner.fullname} &middot; 
        small.home__videoViews #{video.meta.views} íšŒ
        br 
        small.home__videoCreateAt Posted #{video.createdAt}
  hr