mixin video(video)
  a.home__videoItem(href=`/videos/${video.id}`)
    article
      if video.thumbUpload
        div.home__videoThumb(style=`background-image:url(${video.thumbUpload})`)
      else
        div.home__videoThumb
      h4.home__videoTitle=video.title
      if video.hashtags[0].length !== 1
        div.home__videoHashtags
          each hashtag in video.hashtags
            i=hashtag + " "
      div.home__videoMeta
        small.home__videoOwner #{video.owner.fullname} &middot; 
        small.home__videoViews #{video.meta.views} íšŒ
        br 
        small.home__videoCreateAt Posted #{new Date(video.createdAt).toISOString().replace(/[A-Z]/ig, " ").split(".")[0]}
  hr