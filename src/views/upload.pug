extends base.pug

block content

  form(method="POST")
    if errorMessage
      p #{errorMessage}
    input(name="title",placeholder="Title", type="text", required, maxlength=80)
    input(name="desc",placeholder="Description", type="text", required, minlength=20, maxlength=255)
    input(name="hashtags",placeholder="Hashtags, separated by comma.", type="text", required)
    input(type="submit", value="Upload Video")