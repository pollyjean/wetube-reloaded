header
  a(href="/").header__logo
    h1
      i.fab.fa-youtube
  div#search
    form(action="/search")
      input(placeholder="Search by title",name="keyword", type="text", required, value="")
      button.fas.fa-search(type="submit")
  nav
    ul 
      li
      if loggedIn
        li
          a(href="/videos/upload")
            i.fas.fa-cloud-upload-alt
        li
          if user.socialOnly && user.avatarUrl
            a(href=`/users/${user._id}`,title=`${user.username}'s profile`)
              img(src=`${user.avatarUrl}`,alt="Avatar Image")
          else if user.avatarUrl
            a(href=`/users/${user._id}`,title=`${user.username}'s profile`)
              img(src=`/${user.avatarUrl}`,alt="Avatar Image")
          else
            a(href=`/users/${user._id}`,title=`${user.username}'s profile`)
              i.fas.fa-user-circle
        li
          a(href="/users/logout") Logout
      else
        li
          a(href="/join") Join
        li
          a(href="/login") Login